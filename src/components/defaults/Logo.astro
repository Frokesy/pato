<div class="logo">
  <h2>Pato</h2>
  <p>restaurant</p>
</div>

<style>
  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 3px solid #fff;
    border-radius: 14px;
    color: #fff;
    width: auto;
    padding: 6px;
    text-transform: uppercase;
  }
  .logo h2 {
    font-size: 24px;
  }
  p {
    font-size: 12px;
  }
  @media screen and (max-width: 720px) {
    .logo {
      border: 2px solid #fff;
      border-radius: 10px;
      padding: 6px;
    }
    .logo h2 {
      font-size: 18px;
    }
    p {
      font-size: 10px;
    }
  }
</style>
