---
import Head from "../defaults/Head.astro";
import Header from "../defaults/Header.astro";
---
<div class="hero">
  <Head />
  <Header />
  <div class="main-container">
    <div class="control">{"<"}</div>
    <div class="content">
      <div class="subclass">
        <span>Welcome to</span>
        <h2>Pato Place</h2>
        <button>Look Menu</button>
      </div>

      <div class="carousel">
        <div class="carousel-item"></div>
        <div class="carousel-item"></div>
        <div class="carousel-item"></div>
      </div>
    </div>
    <div class="control">{">"}</div>
  </div>
</div>

<style>
  .hero {
    background-image: url("/public/assets/hero_three.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    height: 100vh;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .main-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
    height: 80%;
    width: 90vw;
    margin: 0 auto;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
  }

  .content .subclass {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .content span {
    font-size: 60px;
    font-weight: 400;
    font-family: "Courgette", cursive;
  }

  .content h2 {
    font-weight: 900;
    font-size: 90px;
    text-transform: uppercase;
    font-family: "Poppins", sans-serif;
    letter-spacing: 20px;
  }

  button {
    background-color: #f5f5f5;
    border: none;
    border-radius: 10px;
    padding: 20px 30px;
    font-size: 12px;
    font-family: "Montserrat", sans-serif;
    font-weight: 600;
    margin-top: 50px;
    cursor: pointer;
    color: #ee2020;
    text-transform: uppercase;
  }

  .carousel {
    display: flex;
    padding-top: 120px;
    margin-right: 20px;
  }

  .carousel-item {
    margin-left: 20px;
    background: #808080;
    border-radius: 100%;
    height: 16px;
    width: 16px;
  }

  .control {
    font-size: 26px;
    background: #0b0d17;
    border-radius: 100%;
    padding: 10px 18px;
    color: #808080;
    cursor: pointer;
  }

  .control:hover {
    background: #ee2020;
    color: #fff;
    transition: 0.6s;
  }
</style>
