---
import Head from "../defaults/Head.astro";
---

<Head />
<div class="wrapper">
  <div class="container">
    <div class="content">
      <span class="header-text">Italian Restaurant</span>
      <h2>Welcome</h2>
      <p>
        Donec quis lorem nulla. Nunc eu odio mi. Morbi nec lobortis est. Sed
        fringilla, nunc sed imperdiet lacinia, nisl ante egestas mi, ac
        facilisis ligula sem id neque.
      </p>

      <button>
        <span class="btn-span">Our Story</span>
      </button>
    </div>
    <div class="img-div">
      <img src="/assets/hero_one.jpg" alt="hero_one" />
    </div>
  </div>

  <div class="sub-container">
    <img src="/assets/section_one.jpg" alt="section_one" class="bg-scroll" />
    <div class="sub-content">
        <h2>Hello world</h2>
    </div>
  </div>
</div>

<style>
  .wrapper {
    background: #efefef;
  }
  .container {
    width: 70vw;
    margin: 0 auto;
    padding-top: 120px;
    padding-bottom: 120px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .content {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .content .header-text {
    color: #ee2020;
    font-size: 30px;
    font-weight: 500;
    font-family: "Courgette", cursive;
  }

  .content h2 {
    font-weight: 900;
    font-size: 50px;
    text-transform: uppercase;
    font-family: "Poppins", sans-serif;
    letter-spacing: 6px;
    margin-bottom: 20px;
  }

  .content p {
    text-align: center;
    color: #808080;
    margin-bottom: 20px;
  }

  .img-div {
    width: 390px;
    height: 390px;
  }

  img {
    width: 100%;
    height: 100%;
  }

  button {
    border: none;
    outline: none;
    font-size: 14px;
    text-transform: uppercase;
  }

  .bg-scroll {
    height: 600px;
    animation: bgScroll 60s linear infinite;
  }

  .sub-container {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
  }

  .sub-content {
    position: absolute;
    top: 300px;
    width: 100%;
    background-color: #fff;
  }
</style>
