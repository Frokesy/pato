---
import Head from "../defaults/Head.astro";
import Star from "../svgs/Star.astro";
---

<Head />
<div class="main-container">
  <h2 class="header-text">Customers say</h2>
  <p class="subtext">Review</p>

  <div class="review-container">
    <div class="control">{"<"}</div>
    <div class="review-subcontainer">
      <img src="/assets/avatar.jpg" alt="avatar" />
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus eius ab
        quibusdam in praesentium, atque aliquid mollitia, adipisci suscipit
        nesciunt iste et vel eaque unde corrupti dolor nam deleniti? Neque!
      </p>
      <div class="five-stars">
        <Star />
        <Star />
        <Star />
        <Star />
        <Star />
      </div>
      <div class="footer">
        <span>John Doe</span>
        <span>.</span>
        <span>New York</span>
      </div>
    </div>
    <div class="control">{">"}</div>
  </div>
</div>

<style>
  .main-container {
    padding-top: 100px;
    padding-bottom: 100px;
    width: 100%;
    margin: 0 auto;
  }

  .header-text {
    color: #ee2020;
    text-align: center;
    font-size: 30px;
    font-weight: 500;
    font-family: "Courgette", cursive;
  }

  .subtext {
    font-weight: 900;
    font-size: 50px;
    text-align: center;
    text-transform: uppercase;
    font-family: "Poppins", sans-serif;
    letter-spacing: 20px;
    margin-bottom: 20px;
  }

  .review-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

   .review-subcontainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 80px;
  }

  .review-container p {
    text-align: center;
    padding-top: 40px;
    color: #555;
    width: 70%;
    line-height: 25px;
  }

  .five-stars {
    display: flex;
    padding: 10px 0 30px 0;
  }

  .footer span {
    text-transform: uppercase;
  }
  img {
    border: 4px solid #ee2020;
    border-radius: 50%;
    width: 10rem;
  }

  .control {
    font-size: 26px;
    background: #444;
    border-radius: 100%;
    padding: 10px 18px;
    color: #fff;
    cursor: pointer;
    margin: 0 60px 0 60px;
  }

  .control:hover {
    background: #ee2020;
    color: #fff;
    transition: all .3s ease-in-out;
  }
</style>
